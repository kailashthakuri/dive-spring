<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:annotation-config/>
    <bean class="io.ace.springframework.core.ioc.annotationbased.Profile"></bean>
    <bean id="person1" class="io.ace.springframework.core.ioc.model.Person">
        <property name="name" value="kailash"></property>
        <property name="age" value="27"></property>
    </bean>
    <bean id="person2" class="io.ace.springframework.core.ioc.model.Person">
        <property name="name" value="Ashok"></property>
        <property name="age" value="27"></property>
    </bean>
</beans>